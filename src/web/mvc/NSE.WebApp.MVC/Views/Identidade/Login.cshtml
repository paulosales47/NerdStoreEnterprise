@model NSE.WebApp.MVC.Models.UsuarioLogin

@{
    ViewData["Title"] = "Login";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-12">
        <section>
            <form method="post" asp-route-returnurl="@ViewData["ReturnUrl"]">
                <h4>Seja bem vindo e boas compras</h4>
                <hr />

                <vc:Summary></vc:Summary>

                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Senha"></label>
                    <input asp-for="Senha" class="form-control" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary">Enviar</button>
                </div>

                <div class="form-group mt-3">
                    <p>
                        <a asp-action="Registro" asp-controller="Identidade">Criar uma nova conta</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}